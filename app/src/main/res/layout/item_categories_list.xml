<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_margin="2dp"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/textPageBorder"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundEdit"
    android:elevation="@dimen/elevation"
    app:cardCornerRadius="@dimen/elevation">

    <RelativeLayout android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/catIcon"
            android:layout_margin="@dimen/textPageBorder"
            android:layout_width="72dp"
            android:layout_height="54dp"/>
        <CheckBox
            android:layout_below="@id/catIcon"
            android:id="@+id/cbxCatState"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:buttonTint="@color/textColorPrimary"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hbLines"/>

            </RelativeLayout>

</android.support.v7.widget.CardView>
    </RelativeLayout>