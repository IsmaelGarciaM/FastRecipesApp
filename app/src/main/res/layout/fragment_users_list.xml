<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ismael.fastrecipes.UsersListFragment">



    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/lvUsers"
        android:layout_below="@id/txvTitleUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txvTitleUsers"
        android:layout_width="match_parent"
        android:text="@string/favs"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/textPageBorder"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_marginTop="@dimen/textPageBorder"
        android:id="@+id/txvEmptyUsers"
        android:textAlignment="center"
        android:layout_below="@id/txvTitleUsers"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:text="@string/nofavs"
        android:layout_height="wrap_content" />

</RelativeLayout>
