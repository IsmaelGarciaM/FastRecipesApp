<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ismael.fastrecipes.SearchRecipeFragment">

    <RelativeLayout
        android:id="@+id/rllSelectFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_background_testing"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imvIcon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher_testing" />

        <TextView
            android:layout_toEndOf="@id/imvIcon"
            android:id="@+id/txvQqc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="@string/strqqc" />

        <Button
            android:id="@+id/btnAddFilter"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:hint="Add filter"
            android:layout_alignBottom="@+id/imvIcon"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/imvIcon"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/ic_add"/>

        <Button
            android:id="@+id/btnDelete"
            android:hint="Delete all"
            android:layout_alignBottom="@+id/imvIcon"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/ic_delete_item"
            android:layout_toEndOf="@id/btnAddFilter"
            android:layout_marginStart="50dp"
            />

    <ListView
        android:id="@+id/rcvFilterList"
        android:layout_below="@id/btnAddFilter"
        android:layout_marginTop="@dimen/hbLines"
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
    </ListView>


        <TextView
            android:id="@+id/txvfilterEmptyList"
            android:layout_below="@id/btnAddFilter"
            android:layout_marginTop="@dimen/textPageBorder"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:visibility="gone"
            android:layout_marginEnd="50dp"
            android:text="Añade filtros para concretar la búsqueda."
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent"/>

    </RelativeLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="@dimen/textPageBorder"
        app:srcCompat="@drawable/ic_search_black_24dp"
        app:backgroundTint="@color/colorPrimary" />

</android.support.design.widget.CoordinatorLayout>
